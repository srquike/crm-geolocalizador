@using LevantamientoDeRed.Dto;
@using Microsoft.AspNetCore.Identity;
@model CrearUsuarioDto

@{
    ViewData["Title"] = "Registrar";
}

<div class="bg-secondary">
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-7">
                            <div class="card shadow-lg border-0 rounded-lg mt-5 mb-5">
                                <div class="card-header">
                                    <h3 class="text-center font-weight-light my-4">Registrar usuario</h3>
                                    @if (ViewData["error_mensaje_crear"] is not null)
                                    {
                                        <div class="alert alert-danger" role="alert">
                                            <h4 class="alert-heading">Ocurri&oacute; un error</h4>
                                            <p>@ViewData["error_mensaje_crear"]</p>
                                                @if (ViewData["error_errors_crear"] is not null)
                                                {
                                                    <hr>
                                                    <ul>
                                                        @foreach (var item in ViewData["error_errors_crear"] as IEnumerable<IdentityError>)
                                                        {
                                                            <li class="mb-0">@item.Description</li>
                                                        }
                                                    </ul>
                                                }
                                        </div>
                                    }
                                </div>
                                <div class="card-body">
                                    <form asp-action="Registrar" asp-controller="Usuarios">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <div class="row mb-3">
                                            <div class="col-md-6">
                                                <div class="form-floating mb-3 mb-md-0">
                                                    <input asp-for="Nombre" maxlength="15" class="form-control" id="inputFirstName" type="text" placeholder="Ingrese su nombre" />
                                                    <label asp-for="Nombre">Nombre</label>
                                                    <span asp-validation-for="Nombre"class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-floating">
                                                    <input asp-for="Apellido" maxlength="15" class="form-control" id="inputLastName" type="text" placeholder="Ingrese su apellido" />
                                                    <label asp-for="Apellido">Apellido</label>
                                                    <span asp-validation-for="Apellido" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <div class="col-md-6">
                                                <div class="form-floating mb-3 mb-md-0">
                                                    <input asp-for="UserName" class="form-control" maxlength="9" id="inputEmail" type="text" placeholder="Ingrese su n&uacute;mero de DUI" />
                                                    <label asp-for="UserName">N&uacute;mero de DUI</label>
                                                    <span asp-validation-for="UserName" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-floating">
                                                    <input asp-for="Email" maxlength="50" class="form-control" id="inputEmail" type="email" placeholder="nombre@ejemplo.com" />
                                                    <label asp-for="Email">Correo electr&oacute;nico (opcional)</label>
                                                    <span asp-validation-for="Email" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="form-floating">
                                                <ul>
                                                    <li>La contrase&ntilde;a debe tener almenos 1 n&uacute;mero.</li>
                                                    <li>La contrase&ntilde;a debe tener almenos 6 car&aacute;cteres y un m&aacute;ximo de 10.</li>
                                                    <li>La contrase&ntilde;a debe contener letras min&uacute;sculas y opcionalmente may&uacute;sculas y car&aacute;cteres especiales.</li>
                                                </ul>
                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <div class="col-md-4">
                                                <div class="form-floating mb-3 mb-md-0">
                                                    <input asp-for="Clave" maxlength="10" class="form-control" id="inputPassword" type="password" placeholder="Crear contrase&ntilde;a" />
                                                    <label asp-for="Clave">Contrase&ntilde;a</label>
                                                    <span asp-validation-for="Clave"  class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="form-floating mb-3 mb-md-0">
                                                    <input asp-for="ConfirmarClave" maxlength="10" class="form-control" id="inputPasswordConfirm" type="password" placeholder="Confirmar contrase&ntilde;a" />
                                                    <label asp-for="ConfirmarClave">Confirmar contrase&ntilde;a</label>
                                                    <span asp-validation-for="ConfirmarClave" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="form-floating">
                                                    <select id="Roles" asp-for="Rol" class="form-select"></select>
                                                    <label asp-for="Rol">Rol</label>
                                                    <span asp-validation-for="Rol" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="mt-4">
                                            <div class="d-grid gap-2 d-md-block">
                                                <input type="submit" value="Registrar" class="btn btn-primary btn-block">
                                                <a asp-action="Index" asp-controller="Usuarios" class="btn btn-secondary btn-block">Volver</a>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        await Html.RenderPartialAsync("_ObtenerRolesScriptPartial");
    }
}
