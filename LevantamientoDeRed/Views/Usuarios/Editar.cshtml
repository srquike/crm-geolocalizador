@using LevantamientoDeRed.Dto;
@using Microsoft.AspNetCore.Identity;
@model EditarUsuarioDto

@{
    ViewData["Title"] = "Editar usuario";
}

<div class="bg-secondary">
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-7">
                            <div class="card shadow-lg border-0 rounded-lg mt-5 mb-5">
                                <div class="card-header">
                                    <h3 class="text-center font-weight-light my-4">Editar usuario</h3>
                                    @if (ViewData["error_mensaje_editar"] is not null)
                                    {
                                        <div class="alert alert-danger" role="alert">
                                            <h4 class="alert-heading">Ocurri&oacute; un error</h4>
                                            <p>@ViewData["error_mensaje_editar"]</p>
                                            @if (ViewData["error_errors_editar"] is not null)
                                            {
                                                <hr>
                                                <ul>
                                                    @foreach (var item in ViewData["error_errors_editar"] as IEnumerable<IdentityError>)
                                                    {
                                                        <li class="mb-0">@item.Description</li>
                                                    }
                                                </ul>
                                            }
                                        </div>
                                    }
                                </div>
                                <div class="card-body">
                                    <form asp-action="Editar" asp-controller="Usuarios">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <input type="hidden" asp-for="Id" />
                                        <div class="row mb-3">
                                            <div class="col-md-6">
                                                <div class="form-floating mb-3 mb-md-0">
                                                    <input asp-for="Nombre" maxlength="15" class="form-control" id="inputFirstName" type="text" placeholder="Ingrese su nombre" />
                                                    <label asp-for="Nombre">Nombre</label>
                                                    <span asp-validation-for="Nombre" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-floating">
                                                    <input asp-for="Apellido" maxlength="15" class="form-control" id="inputLastName" type="text" placeholder="Ingrese su apellido" />
                                                    <label asp-for="Apellido">Apellido</label>
                                                    <span asp-validation-for="Apellido" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <div class="col-md-12">
                                                <div class="form-floating">
                                                    <input asp-for="Email" maxlength="50" class="form-control" id="inputEmail" type="email" placeholder="nombre@ejemplo.com" />
                                                    <label asp-for="Email">Correo electr&oacute;nico (opcional)</label>
                                                    <span asp-validation-for="Email" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="mt-4">
                                            <div class="d-grid gap-2 d-md-block">
                                                <input type="submit" value="Guardar cambios" class="btn btn-primary btn-block">
                                                <a asp-action="CambiarClave" asp-controller="Usuarios" asp-route-id="@(Model.Id)" class="btn btn btn-dark btn-block">Cambiar contrase&ntilde;a</a>
                                                <a asp-action="CambiarRol" asp-controller="Usuarios" asp-route-id="@(Model.Id)" class="btn btn btn-dark btn-block">Cambiar rol</a>
                                                <a asp-action="Index" asp-controller="Usuarios" class="btn btn-secondary btn-block">Volver</a>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}