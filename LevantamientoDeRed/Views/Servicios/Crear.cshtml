@using LevantamientoDeRed.Dto;
@using Microsoft.AspNetCore.Identity;
@model CrearServicioDto

@{
    ViewData["Title"] = "Crear Servicio";
}

<div class="bg-secondary">
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-7">
                            <div class="card shadow-lg border-0 rounded-lg mt-5 mb-5">
                                <div class="card-header">
                                    <h3 class="text-center font-weight-light my-4">Registrar Nuevo Servicio</h3>
                                    @if (ViewData["error_mensaje_crear"] is not null)
                                    {
                                        <div class="alert alert-danger" role="alert">
                                            <h4 class="alert-heading">Ocurri&oacute; un error</h4>
                                            <p>@ViewData["error_mensaje_crear"]</p>
                                            @if (ViewData["error_errors_crear"] is not null)
                                            {
                                                <hr>
                                                <ul>
                                                    @foreach (var item in ViewData["error_errors_crear"] as IEnumerable<IdentityError>)
                                                    {
                                                        <li class="mb-0">@item.Description</li>
                                                    }
                                                </ul>
                                            }
                                        </div>
                                    }
                                </div>
                                <div class="card-body">
                                    <form asp-action="Crear" asp-controller="Servicios">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <div class="form-floating mb-3 mb-md-0">
                                            <input asp-for="Nombre" maxlength="15" class="form-control" id="inputFirstName" type="text" placeholder="Ingrese Nombre del Servicio" />
                                            <label asp-for="Nombre">Nombre del Servicio</label>
                                            <span asp-validation-for="Nombre" class="text-danger"></span>
                                        </div>
                                        <div class="mt-4">
                                            <div class="d-grid gap-2 d-md-block">
                                                <input type="submit" value="Crear" class="btn btn-primary btn-block">
                                                <a asp-action="Index" asp-controller="Servicios" class="btn btn-secondary btn-block">Volver</a>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");     
        
    }
}
